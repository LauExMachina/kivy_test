# -------------------------------- SCROLL VIEW ---------------------------------------------------

<ScrollExemple@ScrollView>:
    ScrollStack:
        size_hint_y: None
        height: self.minimum_height
        Button:
            size_hint: None, None
            size: dp(100), dp(100)


# ------------------------------- PAGE LAYOUT ----------------------------------------------------

<PageLayoutExemple@PageLayout>:  # Va regrouper tout les pages avec un slide

    AnchorLayoutExemple:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos

    GridLayoutExemple:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos

    StackLayoutExemple:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos

    ScrollExemple:
