# *************************** PRESENTATION DU MENU PRINCIPALE Fr/En *******************************

<PresentationFr>:

    canvas.before:

        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/space.jpg"


    ScrollView:

        size_hint: 1, 1

        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height


            # Label principal

            Label:
                text: root.description_appli_fr()
                font_name: "fonts/Starwars_italik.ttf"
                font_size: dp(24)
                size_hint_y: None
                height: self.texture_size[1] + 150  # Identique au pagging/marging mais utiliser cette approche pour le texte
                text_size: self.width - 110, None    # Marging
                valign: 'top'
                color: 1, 1, 0, 1  # Couleur du texte principal


