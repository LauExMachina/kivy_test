# ***************************************** Snail Game Description  ******************************************************


<SnailDescription>:

    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/arcade.jpg"

            Label:
                text: "test"
                size_hint: None, None       # Désactive le dimensionnement automatique pour permettre la personnalisation
                size: self.texture_size     # Taille basée sur le contenu du texte
                halign: "center"            # Centre le texte horizontalement
                valign: "middle"            # Centre le texte verticalement
                padding_x: 10               # Ajoute un espace horizontal (marge) autour du texte (modifiez cette valeur selon vos besoins)
                padding_y: 10               # Ajoute un espace vertical (marge) autour du texte (modifiez cette valeur selon vos besoins)

                text_size: self.width - 2 * self.padding_x, None  # Fixe la largeur du texte en tenant compte du padding_x pour le centrage



